{
  "name": "connect4_electron",
  "version": "1.0.0",
  "description": "Connect4 as a downloadable game through electron js",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrblacklicorice/connect4_electron.git"
  },
  "author": "mrblacklicorice and beeno",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrblacklicorice/connect4_electron/issues"
  },
  "homepage": "https://github.com/mrblacklicorice/connect4_electron#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "electron": "^17.1.2"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [{
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "connect4_electron"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "connect4_electron"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}